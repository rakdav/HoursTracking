<Window x:Class="HoursTracking.View.PlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoursTracking.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Планы" Height="600" Width="600">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="60" />
            <Setter Property="Margin" Value="8" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox materialDesign:HintAssist.Hint="Выберите специальность" Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                  ItemsSource="{Binding SpecialistList}" FontSize="16"
                  Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" DisplayMemberPath="NameSpeciality"
                  SelectedValuePath="IdSpeciality" x:Name="SpecList" SelectedValue="{Binding IdSpeciality}"/>
        <ComboBox materialDesign:HintAssist.Hint="Выберите семестр" Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                    ItemsSource="{Binding SpecialistList}" FontSize="16"
                    Grid.Row="0" Grid.Column="1" Margin="5,5,5,5">
            <TextBlock>Осень</TextBlock>
            <TextBlock>Зима</TextBlock>
        </ComboBox>
        <TextBox materialDesign:HintAssist.Hint="Обязательная нагрузка"
            Text="{Binding NecessarilyWork}"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Row="1" Margin="5 30" FontSize="16"/>
        <TextBox materialDesign:HintAssist.Hint="Самостоятельная работа"
            Text="{Binding NecessarilyWork}" FontSize="16"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Row="1" Grid.Column="1" Margin="5 30" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2">
            <Button IsDefault="True"  Style="{StaticResource MaterialDesignRaisedLightButton}" 
            Width="150" Margin="10 0" Click="Button_Click">OK</Button>
            <Button IsCancel="True" Style="{StaticResource MaterialDesignRaisedLightButton}" Width="150" Margin="10 0">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
